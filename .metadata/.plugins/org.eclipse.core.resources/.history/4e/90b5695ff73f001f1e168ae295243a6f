package lap3;

import java.util.Scanner;

public class main_book {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Book book1 = new Book(); //create book
		book1.author = "J.K. Rowling ";
		book1.year = 2542;
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter Book name:");
		book1.name = sc.nextLine();
		System.out.print("Enter Book price:");
		book1.price = sc.nextInt();
		
		
		//show
		System.out.println();
		System.out.printf("Book: %s \nWritten by %s in %d\nPrice is %d Bath",book1.name,book1.author,book1.year,book1.price);
		/*
		Book book2 = new Book();
		System.out.println(book2.name); //รันไม่ผ่านเพราะ book2 ยังไม่ได้สร้างเป็นวัตถุขึ้นมา 
		                                //เเก้โดย Book book2 = new Book();
		*/
		sc.close();

	}

}
